{
  "build": {
    "beforeDevCommand": "pnpm dev:next",
    "beforeBuildCommand": "pnpm build:next",
    "devPath": "http://localhost:1470",
    "distDir": "../out",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Local AI",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": ["http://localhost:3047/*", "https://localai.app/*"]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "open": true,
        "message": true
      },
      "window": {
        "all": false,
        "show": true,
        "maximize": true,
        "center": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "¬© 2023 Louis ‚ù§Ô∏è‚òÆÔ∏èü§ö",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.localai.desktop",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false,
      "endpoints": [
        "https://localai.app/update/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": ""
    },
    "windows": [
      {
        "title": "üéí local.ai",
        "resizable": true,
        "visible": true,
        "center": true,
        "width": 1042,
        "height": 740
      }
    ]
  }
}
