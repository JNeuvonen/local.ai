{
  "name": "local.ai",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "turbo run start --parallel",
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@localai/web",
    "dev:desktop": "turbo run dev --filter=@localai/desktop",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@localai/web",
    "build:desktop": "turbo run build --filter=@localai/desktop",
    "build:desktop:sign": "dotenv -- turbo run build --filter=@localai/desktop",
    "package": "turbo run package --parallel",
    "clean": "turbo run clean --parallel",
    "lint": "turbo run lint --parallel --output-logs=new-only",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "@emotion/react": "11.11.0",
    "@emotion/styled": "11.11.0",
    "next": "13.4.4",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@plasmohq/rps": "1.8.6",
    "@types/archiver": "5.3.2",
    "@types/fs-extra": "11.0.1",
    "@types/node": "20.2.5",
    "@types/node-forge": "1.3.2",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "@types/semver": "7.5.0",
    "@types/uuid": "9.0.1",
    "dotenv-cli": "7.2.1",
    "esbuild": "0.17.19",
    "eslint": "8.41.0",
    "eslint-config-next": "13.4.4",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-react": "7.32.2",
    "fs-extra": "11.1.1",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "tsup": "6.7.0",
    "turbo": "1.9.9",
    "typescript": "5.0.4"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@8.5.0"
}
